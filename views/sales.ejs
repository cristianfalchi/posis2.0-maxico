<%- include('partials/head', {title: "Maxico Srl - Posis 2.0"}) %>

<body>
    <div class="container">
        <!-- menu de navegacion -->
        <%- include('partials/navbar') %>

        <!-- animacion de uploading -->
        <%- include('partials/uploading', {imgUploading: 'uploading.gif'}) %>
        
        <div class="container__info ventas animate__animated animate__fadeIn animate__faster">
            <div class = "title">
                <h2>Ventas</h2>
            <hr/>
            </div>
            <div class="div-table">
                <table >
                    <thead>
                        <tr >
                          <th>POSCode</th>
                          <th>sequenceNumber</th>
                          <th>documentNumber</th>
                          <th>documentDate</th>
                          <th>branchCode</th>
                          <th>product</th>
                          <th>salesType</th>
                          <th>quantityOfPacks</th>
                          <th>totalPacksAmount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < sales.length; i++ ) { %>
                        <tr>
                            <td><%= sales[i].POSCode %></td>
                            <td><%= sales[i].sequenceNumber%> </td>
                            <td><%= sales[i].documentNumber %></td>
                            <td><%= sales[i].documentDate %></td>
                            <td><%= sales[i].branchCode %></td>
                            <td><%= sales[i].product %></td>
                            <td><%= sales[i].salesType %></td>
                            <td><%= sales[i].quantityOfPacks %></td>
                            <td><%= sales[i].totalPacksAmount %></td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>

    <script type="text/javascript" >

       function handleSendData() {
            document.querySelector('.uploading').style.display = "block";
        }
    
        </script>

</body>
</html>